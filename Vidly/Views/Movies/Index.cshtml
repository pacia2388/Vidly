@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (!Model.Any())
{
    <p>We don't have any movies available for renting.</p>
}
else
{
    <h1>@Html.ActionLink("New Movie", "New", "Movies", null, new {@class="btn btn-primary btn-lg"})</h1>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movies</th>
                <th>Date Released</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new {id = movie.Id}, null)</td>
                <td>@movie.DateRelease.ToShortDateString()</td>
            </tr>
        }
        </tbody>
    </table>
}

